{% macro writeLeftBar(showUser) %}
    {% set currentPath = path(app.request.attributes.get('_route'), app.request.attributes.get('_route_params')) %}

            <!-- Menu -->

            <aside id="layout-menu" class="layout-menu menu-vertical menu bg-menu-theme">
                <div class="app-brand demo">
                  <a href="{{ path('dashboard') }}" class="app-brand-link">
                    <span class="app-brand-logo demo">
                        <img src="{{ asset('img/logo.jpg')}}" width="30px" height="40px"/>
                    </span>
                    <span class="app-brand-text demo menu-text fw-bolder ms-2">{{ 'home.page.title'|trans|raw }}</span>
                  </a>
      
                  <a href="javascript:void(0);" class="layout-menu-toggle menu-link text-large ms-auto d-block d-xl-none">
                    <i class="bx bx-chevron-left bx-sm align-middle"></i>
                  </a>
                </div>
      
                <div class="menu-inner-shadow"></div>
      
                <ul class="menu-inner py-1">
                  <!-- Dashboard -->
                  {% set activeClass = '' %}
                  {% if currentPath == '/dashboard' %}
                    {% set activeClass = 'active' %}
                  {% endif %}

                  <li class="menu-item {{ activeClass }}">
                    <a href="{{ path('dashboard') }}" class="menu-link">
                      <i class="menu-icon tf-icons bx bx-home-circle"></i>
                      <div data-i18n="Analytics">{{ 'menu_bar.list.home'|trans }}</div>
                    </a>
                  </li>

                  <!-- Users -->
                  {% set activeClass = '' %}
                  {% if currentPath == '/user-list' %}
                    {% set activeClass = 'active' %}
                  {% endif %}

                  {% if showUser %}
                  <li class="menu-item {{ activeClass }}">
                    <a href="{{ path('user-list') }}" class="menu-link">
                      <i class="menu-icon tf-icons bx bx-user-circle"></i>
                      <div data-i18n="Analytics">{{ 'menu_bar.list.user'|trans }}</div>
                    </a>
                  </li>   
                  {% endif %}   
                  
                  <!-- Products -->
                  {% set activeClass = '' %}
                  {% if currentPath == '/product-list' %}
                    {% set activeClass = 'active' %}
                  {% endif %}

                  <li class="menu-item {{ activeClass }}">
                    <a href="{{ path('product-list') }}" class="menu-link">
                      <i class="menu-icon tf-icons bx bx-box"></i>
                      <div data-i18n="Analytics">{{ 'menu_bar.list.product'|trans }}</div>
                    </a>
                  </li>      
                </ul>
              </aside>
          <!-- / Menu -->
{% endmacro %}

