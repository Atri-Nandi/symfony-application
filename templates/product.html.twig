{% extends "base/base.html.twig" %}
{% import "base/menu_bar.html.twig" as menu %}

{% block body %}
  {{ form_start(form, {'attr': {'novalidate': 'novalidate'} }) }}
  {{ form_errors(form) }}
   <!-- Layout wrapper -->
   <div class="layout-wrapper layout-content-navbar">
      <div class="layout-container">

        <!-- Left menu bar -->
        {{ menu.writeLeftBar(showUser) }}

        <!-- Layout container -->
        <div class="layout-page">
         {{ menu.writeTopBar(user) }}

          <!-- Content wrapper -->
          <div class="content-wrapper">
            <!-- Content -->

            <div class="container-xxl flex-grow-1 container-p-y">
              <h4 class="fw-bold py-3 mb-4">Product</h4>
              <div class="row">
                <div class="col-md-12">                  
                  <div class="card mb-4">
                    <h5 class="card-header">Product Details</h5>
                    <div class="card-body">
                        <div class="row">
                          <div class="mb-3 col-md-12">
                            {{ form_row(form.name) }}
                          </div>
                          <div class="mb-3 col-md-12">
                            {{ form_row(form.description) }}
                          </div>
                          <div class="mb-3 col-md-12">
                            {{ form_row(form.price) }}
                          </div>
                          <div class="mb-3 col-md-12">
                            {{ form_row(form.category) }}
                          </div>                                                   
                        </div>
                        <div class="row mt-2">
                          <div class="mb-3 col-md-1">{{ form_row(form.submit) }} </div>
                          <div class="mb-3 col-md-1">{{ form_row(form.cancel) }} </div>
                        </div>
                      </form>
                    </div>
                    <!-- /Account -->
                  </div>
                </div>
              </div>
            </div>
            <!-- / Content -->


            <div class="content-backdrop fade"></div>
          </div>
          <!-- Content wrapper -->
        </div>
        <!-- / Layout page -->
      </div>

      <!-- Overlay -->
      <div class="layout-overlay layout-menu-toggle"></div>
    </div>
    <!-- / Layout wrapper -->

    {{ form_end(form, {'render_rest': false}) }}    
{% endblock %}
