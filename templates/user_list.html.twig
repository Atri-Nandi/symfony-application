{% extends "base/base.html.twig" %}
{% import "base/menu_bar.html.twig" as menu %}

{% block body %}
   <!-- Layout wrapper -->
   <div class="layout-wrapper layout-content-navbar">
      <div class="layout-container">

         <!-- Left menu bar -->
         {{ menu.writeLeftBar(showUser) }}

        <!-- Layout container -->
        <div class="layout-page">
         {{ menu.writeTopBar(user) }}

          <!-- Content wrapper -->
          <div class="content-wrapper">
            <!-- Content -->

            <div class="container-xxl flex-grow-1 container-p-y">
              <h4 class="fw-bold py-3 mb-4">User List</h4>
              <div class="row">
                <div class="col-md-12">                  
                  <!-- Hoverable Table rows -->
              <div class="card">
                <div class="table-responsive text-nowrap">
                  <table class="table table-hover">
                    <thead>
                      <tr>
                        <th>{{ 'user.form.email.label'|trans|raw }}</th>
                        <th>{{ 'user.form.name.label'|trans|raw }}</th>
                        <th>{{ 'user.form.phone.label'|trans|raw }}</th>
                        <th>{{ 'user.form.address.label'|trans|raw }}</th>
                        <th>Actions</th>
                      </tr>
                    </thead>
                    <tbody class="table-border-bottom-0">
                      {% for user in userlist %}
                        <tr>
                          <td><b>{{ user.email }}</b></td>
                          <td>{{ user.personName }}</td>
                          <td>{{ user.phone }}</td>
                          <td>{{ user.address }}</td>
                          <td>
                            <div class="dropdown">
                              <button type="button" class="btn p-0 dropdown-toggle hide-arrow" data-bs-toggle="dropdown">
                                <i class="bx bx-dots-vertical-rounded"></i>
                              </button>
                              <div class="dropdown-menu">
                                <a class="dropdown-item" href="{{ path('user', {'id': user.id})}}"
                                  ><i class="bx bx-edit-alt me-1"></i> Edit</a
                                >
                                <a class="dropdown-item" href="{{ path('delete-user', {'id': user.id})}}"
                                  ><i class="bx bx-trash me-1"></i> Delete</a
                                >
                              </div>
                            </div>
                          </td>
                        </tr>                        
                      {% endfor %}                      
                    </tbody>
                  </table>
                </div>
              </div>
              <!--/ Hoverable Table rows -->

                </div>
              </div>
            </div>
            <!-- / Content -->


            <div class="content-backdrop fade"></div>
          </div>
          <!-- Content wrapper -->
        </div>
        <!-- / Layout page -->
      </div>

      <!-- Overlay -->
      <div class="layout-overlay layout-menu-toggle"></div>
    </div>
    <!-- / Layout wrapper -->

{% endblock %}
